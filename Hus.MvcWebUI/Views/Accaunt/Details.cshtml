@using Hus.MvcWebUI.Entity
@model Hus.MvcWebUI.Models.OrderDetailsModel

@{
    ViewBag.Title = "Details";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Order detail information</h2>
            <hr />

            <dl class="row">

                <dt class="col-sm-3">Order State</dt>
                <dd class="col-sm-9">
                    @if (Model.OrderState == EnumOrderState.Waiting)
                    {
                    <span class="badge-danger">Waiting for approval</span>
                    }
                    else if(Model.OrderState == EnumOrderState.Completed)
                    {
                    <span class="badge-success">Completed</span>
                    }


                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9"> @Model.Total<i class="fas fa-dollar-sign"></i></dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>


                <dt class="col-sm-3">Addres</dt>
                <dd class="col-sm-9">
                    @Model.AddressTitle
                    <hr />
                    @Model.Address
                    <br />
                    @Model.City-@Model.District-@Model.Neighborhood
                    <br />
                    @Model.PostalCode
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">

                    <table class="table table-bordered">

                        <thead>
                            <tr>
                                <th>Image</th>
                                <th style="width:45%;">Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th style="width:10%;"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.OrderLines)
                            {
                            <tr>
                                <td><img src="~/Upload/@item.Image" width="70" /></td>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td> @item.Price<i class="fas fa-dollar-sign"></i></td>
                                <td><a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                    <i class="fas fa-angle-double-right"></i>
                                    Product Details</a>
                                </td>
                                
                            </tr>
                            }

                        </tbody>
                    </table>


                </dd>


            </dl>
        </div>
    </div>
</div>

