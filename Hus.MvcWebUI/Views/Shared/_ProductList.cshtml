@using Hus.MvcWebUI.Models
@model IEnumerable<ProductModel>

<div class="row">



    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img class="card-img-top" src="~/Upload/@product.Image"  alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="/Home/Details/@product.Id">@product.Name</a>
                    </h5>
                    <p class="card-text pt-2 descript">@product.Description</p>
                </div>

                <div class="card-footer">
                    <small class="text-muted product-price">
                        <i class="fas fa-dollar-sign"></i>
                        @product.Price
                    </small>
                    <a href="/Home/Details/@product.Id" class="btn btn-default btn-sm float-right">
                        <i class="fas fa-angle-double-right"></i>
                        Analyze
                    </a>
                </div>
            </div>
        </div>
    }


</div>